<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:background="#e0e0e0"
        app:cardCornerRadius="6dp"
        app:cardElevation="14dp"
        app:contentPadding="12dp">

        <LinearLayout
            android:id="@+id/accLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accPower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accelerometer"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/accXValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/undefinedValue"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/accYValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/undefinedValue"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/accZValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/undefinedValue"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:background="#e0e0e0"
        app:cardCornerRadius="6dp"
        app:cardElevation="14dp"
        app:contentPadding="12dp">

        <LinearLayout
            android:id="@+id/gravityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gravityPower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gravity"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gravityXValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/undefinedValue"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gravityYValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/undefinedValue"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gravityZValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/undefinedValue"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>